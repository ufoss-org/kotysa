<configuration>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.ufoss.kotysa" level="DEBUG"/>

    <root level="info">
        <appender-ref ref="stdout"/>
    </root>
</configuration>
